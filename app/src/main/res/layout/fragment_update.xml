<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".admin.UpdateTrainFragment">


    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Train"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:background="#C34570"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toTopOf="parent" />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-50dp"
        tools:layout_editor_absoluteY="-258dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                app:cardBackgroundColor="#ffff"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="10dp">

                    <EditText
                        android:id="@+id/edt_text_station"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:background="#D3FBECF1"
                        android:hint="Departure"
                        android:padding="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edt_text_destination"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginTop="15dp"
                        android:background="#D3FBECF1"
                        android:hint="Destination"
                        android:padding="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edt_text_train"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginTop="15dp"
                        android:background="#D3FBECF1"
                        android:hint="Train Name"
                        android:padding="10dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edt_text_class"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginTop="15dp"
                        android:background="#D3FBECF1"
                        android:hint="Class Train"
                        android:padding="10dp"
                        android:textStyle="bold" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_update"
                        android:layout_width="250dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="20dp"
                        android:background="@drawable/button"
                        android:text="Update Train"
                        android:textColor="@color/white"
                        android:textSize="20dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>